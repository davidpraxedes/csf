generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id              String   @id @default(uuid())
  transactionId   String   @unique
  status          String   @default("pendente") // pendente, aprovado, entregue
  paymentStatus   String   @default("pending") // pending, paid, failed
  
  // Dados Pessoais
  nomeCompleto    String
  cpf             String
  email           String?
  telefone        String?
  dataNascimento  String?
  profissao       String?
  salario         String?
  nomeMae         String?
  
  // Endereço (JSON ou campos separados, aqui separados para facilitar query)
  cep             String
  logradouro      String
  numero          String
  complemento     String?
  bairro          String
  cidade          String
  estado          String
  
  // Dados Cartão/Pedido
  valorEntrega    Float
  pixCode         String?
  pixQrCode       String?  @db.Text
  pixCopiado      Boolean  @default(false)
  pixCopiadoEm    DateTime?
  
  // Dados KYC
  rg              String?
  documentPhotoFront String? @db.Text // Base64 pode ser grande
  documentPhotoBack  String? @db.Text
  
  // Metadados
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// Modelo para Analytics
model Visitor {
  id              String   @id @default(uuid())
  ip              String   @unique
  location        String?  // JSON stringified { city, region, country, lat, lng }
  device          String?  // mobile, desktop, etc
  currentPath     String?
  lastSeen        DateTime @default(now())
  
  // Funnel Data
  visitedHome     Boolean  @default(false)
  visitedCPF      Boolean  @default(false)
  visitedForm     Boolean  @default(false)
  visitedDelivery Boolean  @default(false)
  visitedPayment  Boolean  @default(false)
  converted       Boolean  @default(false) // Copied PIX or Paid
  
  stages          String?  @db.Text // JSON string list of all visited paths with timestamps
  
  firstVisit      DateTime @default(now())
}
