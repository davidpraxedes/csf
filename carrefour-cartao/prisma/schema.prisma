generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id              String   @id @default(uuid())
  transactionId   String   @unique
  status          String   @default("pendente") // pendente, aprovado, entregue
  
  // Dados Pessoais
  nomeCompleto    String
  cpf             String
  email           String?
  telefone        String?
  dataNascimento  String?
  profissao       String?
  salario         String?
  nomeMae         String?
  
  // Endereço (JSON ou campos separados, aqui separados para facilitar query)
  cep             String
  logradouro      String
  numero          String
  complemento     String?
  bairro          String
  cidade          String
  estado          String
  
  // Dados Cartão/Pedido
  valorEntrega    Float
  pixCode         String?
  pixQrCode       String?  @db.Text
  pixCopiado      Boolean  @default(false)
  pixCopiadoEm    DateTime?
  
  // Dados KYC
  rg              String?
  documentPhotoFront String? @db.Text // Base64 pode ser grande
  documentPhotoBack  String? @db.Text
  
  // Metadados
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
